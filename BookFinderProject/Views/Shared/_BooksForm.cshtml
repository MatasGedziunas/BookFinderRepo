<style>
    .non-bold {
        font-weight: normal
    }
</style>
@{ 
    string title = Request.Form["title"] ?? "";
    string author = Request.Form["author"] ?? "";
}

<form method="post" action="/Book/Show" class="form container mt-4" style="margin-top:10px">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="title">Title:</label>
                <input type="text" name="title" id="title" placeholder="Book Title; e.g., The Witcher" class="form-control" value="@title">
            </div>
            <div class="form-group">
                <label for="title">Author:</label>
                <input type="text" name="author" id="author" placeholder="Author, e.g., Ernest Hemingway" class="form-control" value="@author">
            </div>
            <div class="form-group">
                <label for="title">Series:</label>
                <input type="text" name="series" id="series" placeholder="Series, e.g., Harry Potter" class="form-control">
            </div>
            <div class="form-group">
                <label for="title">Lexile:</label>
                <div class="d-inline-flex align-items-center" style="display:inline-flex">
                    <input type="text" name="min_lexile" id="min_lexile" value="-650" class="form-control mr-2">
                    <span class="my-auto" style="margin-inline:5px; align-items:center; ">to</span>
                    <input type="text" name="max_lexile" id="max_lexile" value="2150" class="form-control ml-2">
                </div>
            </div>
            <div class="form-group">
                <label for="title">Book type:</label>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="type" id="fiction" value="fiction">
                    <label class="form-check-label" for="fiction" style="font-weight:normal">Fiction</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="type" id="nonfiction" value="nonfiction" style="font-weight:normal">
                    <label class="form-check-label" for="nonfiction" style="font-weight:normal">Non-Fiction</label>
                </div>
            </div>
            <div class="form-group">
                <label for="category">Category:</label>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="category" id="animals" value="Animals, Bugs & Pets">
                    <label class="form-check-label non-bold" for="animals">Animals, Bugs & Pets</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="category" id="art" value="Art, Creativity & Music">
                    <label class="form-check-label non-bold" for="art">Art, Creativity & Music</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="category" id="literature" value="General Literature">
                    <label class="form-check-label non-bold" for="literature">General Literature</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="category" id="hobbies" value="Hobbies, Sports & Outdoors">
                    <label class="form-check-label non-bold" for="hobbies">Hobbies, Sports & Outdoors</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="category" id="scifi" value="Science Fiction & Fantasy">
                    <label class="form-check-label non-bold" for="scifi">Science Fiction & Fantasy</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="category" id="real-life" value="Real Life">
                    <label class="form-check-label non-bold" for="real-life">Real Life</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="category" id="science-tech" value="Science & Technology">
                    <label class="form-check-label non-bold" for="science-tech">Science & Technology</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="category" id="mystery" value="Mystery & Suspense">
                    <label class="form-check-label non-bold" for="mystery">Mystery & Suspense</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="category" id="reference" value="Reference">
                    <label class="form-check-label non-bold" for="reference">Reference</label>
                </div>
            </div>

        </div>
    </div>
    <!-- Other form fields -->
    <button type="submit" class="btn btn-primary">Search</button>
</form>
